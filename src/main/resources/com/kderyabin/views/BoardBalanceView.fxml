<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import com.sun.javafx.scene.control.skin.TableHeaderRow?>
<ScrollPane hbarPolicy="NEVER"
            fitToWidth="true"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kderyabin.views.BoardBalanceView">
    <BorderPane>
        <top>
            <HBox styleClass="header">
                <BorderPane HBox.hgrow="ALWAYS">
                    <left>
                        <JFXButton text="&#xe5c4;" styleClass="header__btn-icon"
                                   BorderPane.alignment="CENTER" onAction="#goBack"/>
                    </left>
                    <center>
                        <Label fx:id="boardName" text="New board" styleClass="header__title"/>
                    </center>
                    <right>
                        <HBox BorderPane.alignment="CENTER">
                            <JFXButton text="&#xe145;" styleClass="header__btn-icon"
                                       onAction="#addItem"/>
                        </HBox>

                    </right>
                </BorderPane>
            </HBox>
        </top>
        <center>
            <VBox styleClass="form-panel">
                <StackedBarChart title="Expenses" fx:id="expensesChart" styleClass="expenses-chart">
                    <yAxis>
                        <CategoryAxis label="Participants"/>
                    </yAxis>
                    <xAxis>
                        <NumberAxis label="Amount"/>
                    </xAxis>
                </StackedBarChart>
                <TableView fx:id="statsTable"/>
                <TableView fx:id="shareTables"/>
            </VBox>
        </center>
    </BorderPane>
</ScrollPane>
