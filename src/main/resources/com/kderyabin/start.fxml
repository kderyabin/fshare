<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.kderyabin.controllers.StartController">
   <children>
      <Label text="Let's start">
         <font>
            <Font name="Segoe Script" size="87.0" />
         </font>
      </Label>
      <Button contentDisplay="CENTER" mnemonicParsing="false" text="Add board" textAlignment="CENTER" style="-fx-border-radius: 30; -fx-background-radius: 30;">
         <font>
            <Font size="26.0" />
         </font>
      </Button>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/team-1721x1160.png" />
         </image>
      </ImageView>
   </children>
</VBox>
